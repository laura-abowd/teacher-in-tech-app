<div class="nav__image jumbotron">
</div>
<div class="container">
  <section class="section-yellow col-xl-12 mb-5">
    <!-- <div class="login__form"> -->
    <div class="form-yellow col-xl-8 ">
      <h1 class="header__text-h1">Login</h1>
      <p>Please login to schedule a tutoring session.</p>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col-xl-6">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class:
                  "form__text-area " }%>
        </div>
        <div class="col-xl-6">
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class:
                  "form__text-area "} %>
        </div>
      </div>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <div class=" ">
        <%= f.button :submit, "Log in", class: "btn btn__login col-xl-2 p-2 my-3" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </section>
</div>
