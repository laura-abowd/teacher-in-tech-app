
<section class="section__login">
<!-- <div class="login__form"> -->
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="login__form shadow rounded">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "login__input_field" }%>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "login__input_field" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

    <div class=" ">
      <%= f.button :submit, "Log in", class: "btn btn__login" %>
    </div>
  </div>
  <% end %>

<%= render "devise/shared/links" %>
<!-- </div> -->
</section>
