<%= form_for @contact, url: contact_path do |form| %>
<div class="form-group" >
  <%= form.label :name, class: "form_label" %><br>
  <%= form.text_field :name, required: true, class: "contact-form-text-area" %><br>
  <%= form.label :email, class: "form_label" %><br>
  <%= form.text_field :email, required: true, class: "contact-form-text-area"%><br>
  <%= form.label :message, class: "form_label" %><br>
  <%= form.text_area :message, required: true, class: "contact-form-text-area" %><br>
  <%= form.submit 'Send Message', class: "btn btn-primary" %>
  </div>
<% end %>
